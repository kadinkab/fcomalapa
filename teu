					}
				}]
			});

			$('.anexo').slick({
				dots: false, // puntos
				infinite: true,
				arrows: true, // flechas
				autoplay: true,
				autoplaySpeed: 3500,
				slidesToShow: 4,
				pauseOnHover: true,
				responsive: [{
					breakpoint: 768,
					settings: {
						//arrows: false,
						slidesToShow: 2
					}
				}, {
					breakpoint: 480,
					settings: {
						arrows: false,
						centerPadding: '0px',
						slidesToShow: 2
					}
				}]
			});
		});
	</script>

